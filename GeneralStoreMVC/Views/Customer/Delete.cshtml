@model CustomerDetailModel

@{
    ViewData["Title"]= "Delete Customer Menu";
}

<h1>Delete</h1>
<h3 class="text-danger">Are you sure you want to delete this?</h3>

<div>
    <h4>Customer</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Id)
        </dd>
        <dt class="col-sm-2">
           Name
        </dt>
        <dd class="col-sm-10">
             @Html.DisplayFor(model=>model.Name)
        </dd>
        <dt class="col-sm-2">
          Email
        </dt>
        <dd class="col-sm-10">
             @Html.DisplayFor(model=>model.Email)
        </dd>
    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="submit" value="Delete" class="btn btn-danger"/> |
     <a asp-route-id="@Model.Id" asp-action="Edit" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-info">Back to Listing</a>
</form>
